{
	"$schema": "https://railway.app/railway.schema.json",
	"build": {
		"buildCommand": "exit 0",
		"builder": "RAILPACK"
	},
	"deploy": {
		"healthcheckPath": "/health",
		"healthcheckTimeout": 10,
		"numReplicas": 1,
		"restartPolicyMaxRetries": 3,
		"restartPolicyType": "ALWAYS",
		"startCommand": "bun --cwd ./apps/api start"
	}
}
