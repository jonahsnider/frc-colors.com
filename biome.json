{
	"$schema": "https://biomejs.dev/schemas/2.3.8/schema.json",
	"files": {
		"includes": [
			"**",
			"!**/.next",
			"!**/node_modules",
			"!**/.vercel",
			"!**/package.json",
			"!**/.turbo",
			"!**/next-env.d.ts"
		]
	},
	"formatter": {
		"formatWithErrors": true,
		"lineWidth": 120
	},
	"javascript": {
		"formatter": {
			"jsxQuoteStyle": "single",
			"quoteStyle": "single"
		},
		"globals": ["React"]
	},
	"json": {
		"parser": {
			"allowComments": true
		}
	},
	"linter": {
		"rules": {
			"style": {
				"noParameterProperties": "off"
			},
			"complexity": {
				"useLiteralKeys": "off",
				"noStaticOnlyClass": "off"
			}
		}
	}
}
